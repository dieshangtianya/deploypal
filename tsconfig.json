{
  // Visit https://aka.ms/tsconfig to read more about this file
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./lib",
    "module": "commonjs",
    "target": "esnext",
    "lib": [
      "ESNext"
    ],
    "types": [
      "node"
    ],
    "declaration": true,
    "strict": true,
    "skipLibCheck": true,
    "noUncheckedSideEffectImports": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true, // 允许导入 ES 模块
    "noEmit": true,
    "typeRoots": ["./node_modules/@types", "./src/types"]
  },
  "include": [
    "src/**/*",
  ],
  "exclude": [
    "node_modules"
  ]
}